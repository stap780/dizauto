<%= turbo_frame_tag stock_transfer_status, class: "d-flex list-group-item py-2 border-start-0 border-end-0 row", data: {
    sort_url: sort_stock_transfer_status_path(stock_transfer_status.id), sort_item_id: stock_transfer_status.id }  do %>
  <%= tag.div(class: "col-1") do %>
    <%= sortable_with_badge(stock_transfer_status.position)%>
    <%= stock_transfer_status.id%>
  <% end %>
    <%= tag.div(stock_transfer_status.title, class: "col-5")%>
    <%= tag.div('', class: "col-4") do %>
        <%= tag.span('', class: 'spinner-grow-static', style: "background-color: #{stock_transfer_status.color};")%>
    <% end %>
    <div class= "col-2 d-flex justify-content-end gap-2 align-items-center">
        <%= render 'shared/edit_delete_link_turbo', object: stock_transfer_status %>
    </div>
<% end %>