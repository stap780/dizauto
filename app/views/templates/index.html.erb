<%= link_to "<i data-feather='plus'></i> Template".html_safe, new_template_path, class: "btn btn-primary float-end mt-n1" %>
<div class="mb-3">
  <h1 class="h3 d-inline align-middle">Template</h1>
</div>

<div class="card">
  <div class="card-header pb-0">
    <div class="card-actions float-end">
      <div class="dropdown position-relative">
        <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
          <i class="align-middle" data-feather="more-horizontal"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
          <a href="#" class="dropdown-item">test</a>
        </div>
      </div>
    </div>
    <h5 class="card-title mb-0"></h5>
  </div>
  <div class="card-body">
    <div id="datatables-template_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
      <div class="row">
        <div class="col-sm-12">
          <table id="datatables-template" class="table table-striped">
            <thead>
              <tr>
                <%=tag.th('#')%>
                <%=tag.th(t('helpers.label.template.title'))%>
                <%=tag.th(t('helpers.label.template.subject'))%>
                <%=tag.th(t('helpers.label.template.receiver'))%>               
                <%=tag.th(t('helpers.label.template.content'))%>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @templates.each do |template| %>
                  <%= render template %>
              <% end %>
              </tbody>
          </table>
        </div>
      </div>
      <div class="row paginate-wrap">
        <%= render "shared/paginate", f: @templates %>
      </div>
    </div>
  </div>
</div>
