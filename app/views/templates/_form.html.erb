<%= form_with(model: template) do |f| %>
    <%= render "shared/errors", object: template %>

  <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
              <div class="row col-md-7">
                  <div class="mb-3 col-md-12">
                    <%= f.label :title, class: "form-label" %>
                    <%= f.text_field :title, class: "form-control" %>
                  </div>
                  <div class="mb-3 col-md-12">
                    <%= f.label :subject, class: "form-label" %>
                    <%= f.text_field :subject, class: "form-control" %>
                  </div>
                  <div class="mb-3 col-md-12">
                    <%= f.label :receiver, class: "form-label" %>
                    <%= f.select :receiver, @receivers, {}, {class: "form-select" }%>
                  </div>
                  <div class="mb-3 col-md-12">
                    <%= f.label :content, class: "form-label" %>
                    <%= f.text_area :content, class: "form-control" %>
                  </div>
              </div>            
            </div>
            <div class="card-footer">
                <%= f.submit class: "btn btn-primary" %>
                <%= link_to t('back'), :back, class: "btn btn-outline-primary" %>
            </div>
        </div>
    </div>
  </div>

<% end %>
