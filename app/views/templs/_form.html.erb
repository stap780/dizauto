<%= form_with(model: templ, data: {controller: 'template', 'template-dnone-class': 'd-none'}) do |f| %>
    <%= render "shared/errors", object: templ %>

  <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
            <ul class="nav nav-pills" id="templEditTab" role="tablist">
                <li class="nav-item border border-primary rounded" role="presentation">
                <a class="nav-link active" id="templEditMain-tab" data-bs-toggle="tab" data-bs-target="#templEditMain">Основные</a>
                </li>
                <li class="nav-item border border-primary rounded" role="presentation">
                <a class="nav-link" id="templEditHelp-tab" data-bs-toggle="tab" data-bs-target="#templEditHelp">Помощь</a>
                </li>
            </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="templEditMain" role="tabpanel" aria-labelledby="templEditMain-tab">
                        <%= render "form_data", f: f %>
                    </div>
                    <div class="tab-pane" id="templEditHelp" role="tabpanel" aria-labelledby="templEditHelp-tab">              
                        <%= render "shared/liquid_help" %>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <%= f.submit class: "btn btn-primary" %>
                <%= link_to t('back'), templs_path, class: "btn btn-outline-primary" %>
            </div>
        </div>
    </div>
  </div>

<% end %>
