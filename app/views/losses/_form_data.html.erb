<div class="col-3 ps-0 pe-1">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
</div>
<div class="col-3 ps-0 pe-1">
    <%= f.label :date, class: "form-label" %>
    <%= f.date_field :date, class: "form-control bg-light cursor-pointer", data: { controller: 'flatpickr', flatpickr_alt_input: "true", flatpickr_alt_format: "d-m-Y"} %>
</div>
<div class="col-3 ps-0 pe-1">
    <%= f.label :warehouse_id, class: "form-label" %>
    <%= f.select :warehouse_id, Warehouse.pluck(:title, :id), {include_blank: false}, {class: "form-select"}%>
</div>