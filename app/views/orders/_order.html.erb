<%= tag.td tag.b( order.id) %>
<%= tag.td do %>
    <%= tag.span(   order.order_status.title,
                    class: 'w-100', 
                    style: 'background-color:'+order.order_status.color,
                    data: {controller: 'badge', badge_target: 'value', bg_color: order.order_status.color }) if order.order_status %>
<% end %>
<%= tag.td( order.client.name ) %>
<%= tag.td( order.manager.name ) %>
<%= tag.td( order.payment_type.title ) %>
<%= tag.td( order.delivery_type.title ) %>
<%= tag.td( order.order_items.sum(:sum)) %>
<%= tag.td( order.created_at.strftime("%d/%m/%Y") ) %>
<%= tag.td do %>
    <%= render 'shared/print', object: order, templates: Templ.order_print if Templ.order_print.presence %>
<% end %>
 <%= td_index_edit_delete_link(order)%>
