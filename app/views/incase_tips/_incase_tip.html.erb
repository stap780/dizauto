<%= turbo_frame_tag incase_tip, class: "list-group-item py-2 border-start-0 border-end-0" do %>
    <div class="row">
        <%= tag.div tag.b(incase_tip.id), class: "col-md-1" %>
        <%= tag.div(incase_tip.title, class: "col-md-5")%>
        <%= tag.div('', class: "col-md-5") do %>
            <%= tag.span('', class: 'spinner-grow-static', style: "background-color: #{incase_tip.color};")%>
        <% end %>
        <div class= "col-md-1">
            <%= link_to edit_icon, edit_incase_tip_path(incase_tip), class: 'px-2' %>
            <%= link_to trash_icon, incase_tip, data: { "turbo-method": :delete, confirm: 'Are you sure?' } %>
        </div>
    </div>
<% end %>