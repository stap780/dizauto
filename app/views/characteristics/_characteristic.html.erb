<%= turbo_frame_tag characteristic, class: 'd-table-row' do %>
  <%= tag.div(class: "d-table-cell", style: 'width: 60px;') do %>
    <%= tag.b characteristic.id%>
  <%end %>
  <%= tag.div(characteristic.title, class: "d-table-cell")%>
  <%= tag.div(class: "d-table-cell d-flex justify-content-end gap-2 align-items-center ps-2") do %>
    <%= link_to edit_icon, edit_property_characteristic_path(@property, characteristic), data: { turbo_frame: '_top'}, class: '' %>
    <%= link_to trash_icon, [@property, characteristic], data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class: "" %>    
  <% end %>
<% end %>