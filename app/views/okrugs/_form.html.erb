<%= turbo_frame_tag okrug do %>
  <%= form_with(model: okrug) do |f| %>
      <%= render "shared/errors", object: okrug %>

    <div class="row">
      <div class="card">
          <div class="card-body">
            <div class="row">
              <% if !f.object.new_record? %>
              <div class="col-1"><%= f.object.id if !f.object.new_record? %></div>
              <% end %>
                <div class="col-9">
                  <%= f.label :title, class: "col-form-label" if f.object.new_record?%>
                  <%= f.text_field :title, class: "form-control" %>
                  <%= inline_error_for(:title, okrug)%>
                </div>
              <div class="<%= f.object.new_record? ? "col" : "col-2"%> d-flex justify-content-end gap-2 align-items-center">
                <%= f.submit t(:save), class: "btn btn-primary" %>
                <%= link_to close_icon, :back, class: "btn btn-outline-primary" %>
              </div>
            </div>            
          </div>
      </div>
    </div>

  <% end %>
<% end %>
