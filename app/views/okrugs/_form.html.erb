<%= turbo_frame_tag okrug do %>
  <%= form_with(model: okrug) do |f| %>
      <%= render "shared/errors", object: okrug %>

    <div class="row">
      <div class="card">
          <div class="card-header">
          </div>
          <div class="card-body">
            <div class="hstack gap-3">
                <div class="col-md-5 row">
                  <%= f.label :title, class: "col-sm-4 col-form-label" %>
                  <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control" %>
                    <%= inline_error_for(:title, okrug)%>
                  </div>
                </div>
                <div class="col-md-4">
                  <%= f.submit class: "btn btn-primary" %>
                  <%= link_to t('back'), okrugs_path, class: "btn btn-outline-primary" %>
                </div>
            </div>            
          </div>
          <div class="card-footer">
          </div>
      </div>
    </div>

  <% end %>
<% end %>
