<tr id="<%= dom_id supply %>">
    <td><%= check_box_tag "supply_ids[]", supply.id, false, {class: 'checkboxes form-check-input', data: { 'selectall_target': 'checkbox', action: "change->selectall#toggleParent"}, form: :bulk_action_form } %></td>
    <%= tag.td tag.b(supply.id) %>
    <%= tag.td(supply.created_at.strftime("%d/%m/%Y")) %>
    <%= tag.td do %>
        <%= tag.span(   supply.supply_status.title,
                        class: 'text-wrap w-100', 
                        style: 'background-color:'+supply.supply_status.color,
                        data: {controller: 'badge', badge_target: 'value', bg_color: supply.supply_status.color }) if supply.supply_status %>
    <% end %>
    <%= tag.td(supply.company.present? ? supply.company.short_title : '') %>
    <%= tag.td(supply.title) %>
    <%= tag.td do %>
        <%=tag.span(t('helpers.label.supply.in_number'))%> <%= tag.span(supply.in_number) %></br>
        <%=tag.span(t('helpers.label.supply.in_date'))%> <%= tag.span(supply.in_date ? supply.in_date.strftime("%d/%m/%Y") : '') %>
    <% end %>
    <%= tag.td(supply.manager ? supply.manager.name : '') %>
    <%= tag.td( supply.supply_items.sum(:sum)) %>
    <%= td_index_edit_delete_link(supply)%>
</tr>

