<%= form_with(model: supply, data: { controller: 'nested-form slimselect', nested_form_wrapper_selector_value: '.nested-form-wrapper' }, 
                class: 'supply-form' ) do |f| %>
   <%= render 'shared/errors', object: supply%>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <%= tabs_head('supply', [ ['main', t(:main)],['history', t(:history)] ]) if !f.object.new_record? %>
                </div>
                <div class="card-body">
                <div class="tab-content">
                     <div class="tab-pane active" id="main_tab" role="tabpanel" aria-labelledby="main_tab">
                        <div class="row">
                            <%= render 'form_data', f: f%>
                        </div>
                        <div class="row">
                            <div class="col-md-2 mb-2">
                                <button type="button" class="btn btn-primary" data-action="nested-form#add"><i data-feather='plus'></i>Add line</button>
                            </div>
                            <template data-nested-form-target="template">
                                <%= f.fields_for :supply_items, SupplyItem.new, child_index: 'NEW_RECORD' do |item| %>
                                    <%= render "nested_items", f: item %>
                                <% end %>
                            </template>
                            <div class="table-responsive">
                                <table class="table table-primary table-striped table-hover" style="table-layout: fixed;">
                                    <thead class="">
                                        <tr>
                                            <th scope="col" class="col-5"><%= t('helpers.label.supply_item.product_id')%></th>
                                            <th scope="col" class="col-1"><%= t('helpers.label.supply_item.warehouse_id')%></th>
                                            <th scope="col" class="col-1"><%= t('helpers.label.supply_item.quantity')%></th>
                                            <th scope="col" class="col-1"><%= t('helpers.label.supply_item.price')%></th>
                                            <th scope="col" class="col-2"><%= t('helpers.label.supply_item.sum')%></th>
                                            <th scope="col" class="col-1"><%= t('helpers.label.supply_item.total')%></th>
                                            <th scope="col" class="col-1"></th>
                                        </tr>
                                    </thead>
                                    <tbody class="">
                                        <%= f.fields_for :supply_items do |item| %>
                                            <%= render "nested_items", f: item %>
                                        <% end %>
                                        <tr data-nested-form-target="target"></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <% if !f.object.new_record? %>
                    <div class="tab-pane" id="history_tab" role="tabpanel" aria-labelledby="history_tab">
                        <%= render "shared/history", f: f %>
                    </div>
                    <% end %>
                </div>
                </div>
                <div class="card-footer">
                    <%= f.submit class: "btn btn-primary" %>
                    <%= link_to t('back'), supplies_path, class: "btn btn-outline-primary" %>
                </div>
            </div>
        </div>
    </div>

<% end %>
