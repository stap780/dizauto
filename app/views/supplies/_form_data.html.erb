
<div class="mb-3 col-4 ps-0 pe-1 ">
    <%= f.label :buyer_id, class: "form-label" %>
    <%= f.select :buyer_id, Company.our.pluck(:short_title, :id), {include_blank: false}, { class: "form-select"} %>
</div>
<div class="mb-3 col-7 ps-0 pe-1 "></div>
<div class="mb-3 col-3 ps-0 pe-1 ">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
</div>
<div class="mb-3 col-3 ps-0 pe-1 ">
    <%= f.label :company_id, class: "form-label" %>
    <%= f.select :company_id, Company.pluck(:short_title, :id), {include_blank: false}, {data: {controller: 'slimselect'}} %>
</div>
<div class="mb-3 col-2 ps-0 pe-1 ">
    <%= f.label :in_number, class: "form-label" %>
    <%= f.text_field :in_number, class: "form-control" %>
</div>
<div class="mb-3 col-2 ps-0 pe-1 ">
    <%= f.label :in_date, class: "form-label" %>
    <%= f.date_field :in_date, class: "form-control bg-light", data: { controller: 'flatpickr',flatpickr_alt_input: "true", flatpickr_alt_format: "d-m-Y" } %>
</div>
<div class="mb-3 col-2 ps-0 pe-1 ">
    <%= f.label :warehouse_id, class: "form-label" %>
    <%= f.select :warehouse_id, Warehouse.pluck(:title, :id), {include_blank: false}, {class: "form-select"}%>
</div>
