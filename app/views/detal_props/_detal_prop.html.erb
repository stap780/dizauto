
<%= turbo_frame_tag "detal_prop_#{detal_prop.id}_detal_#{detal.id}", class: "row" do %>
  <div class="mb-3 col-4">
      <%= detal_prop.property.title.to_s%>
  </div>
  <div class="mb-3 col-4">
      <%= detal_prop.property.c_val(detal_prop.characteristic_id).title.to_s if detal_prop.present? %>
  </div>
  <div class="mb-3 col-4 d-flex justify-content-end gap-2 align-items-center">
      <%= link_to edit_icon, [:edit, detal, detal_prop], class: '' %>
      <%= link_to trash_icon, [detal,detal_prop], data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class:"" %>
  </div>
<% end %>
