<%= turbo_frame_tag dom_id(@detal, dom_id(detal_prop))  do %>
    <%= form_with(model: [@detal, detal_prop], class: "row align-items-center", data: {}) do |f|%>
        <%= render 'shared/errors', object: detal_prop %>
        
        <div class="mb-3 col-4">

        <%= f.label :property_id, t('property_one'), class: "visually-hidden" %>
        <%= f.select :property_id,  options_for_select(Property.pluck(:title, :id), @selected), 
                                    {include_blank: true, prompt: t('property_one')}, 
                                    {data: {controller: 'slimselect',
                                            nested_url:  characteristics_detal_detal_props_path}}  %>
        </div>
        <div class="mb-3 col-4">
        <%= f.label :characteristic_id, t('characteristic_one'), class: "visually-hidden" %>
        <%= f.select :characteristic_id, @characteristics, 
                        {include_blank: true, prompt: t('characteristic_one')}, 
                                        {data: {controller: 'slimselect',
                                        search_url:  "/properties/#{@selected}/characteristics/search",}}  %>
        </div>

        <div class="mb-3 col-4 d-flex justify-content-end gap-2 align-items-center">
            <%= f.submit t(:save), class: "btn btn-primary" %>
            <%= link_to close_icon, :back, class: "btn btn-outline-primary" %>
        </div>

    <% end %>
<% end %>