<%= link_to "<i data-feather='plus'></i> #{Incase.model_name.human}".html_safe, new_incase_path, class: "btn btn-primary float-end mt-n1" %>
<div class="mb-3">
  <h1 class="h3 d-inline align-middle"><%= Incase.model_name.human(count: 2)%></h1>
</div>

<div class="card">
  <div class="card-header pb-0">
    <div class="card-actions float-end">
      <div class="dropdown position-relative">
        <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
          <i class="align-middle" data-feather="more-horizontal"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
          <%= link_to 'File import'.html_safe, file_import_incases_path, class: 'dropdown-item', data: {controller: 'turbo'} %>
        </div>
      </div>
    </div>
    <h5 class="card-title mb-0"></h5>
  </div>
  <div class="card-body">
    <div id="datatables-incases_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
      <div class="row">
        <div class="col-sm-12 table-responsive">
          <table id="datatables-incases" class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th><%= t('helpers.label.incase.region')%></th>
                <th><%= t('helpers.label.incase.strah_id')%></th>
                <th><%= t('helpers.label.incase.stoa')%></th>
                <th><%= t('helpers.label.incase.unumber')%></th>
                <th><%= t('helpers.label.incase.car')%></th>
                <th><%= t('helpers.label.incase.date')%></th>
                <th><%= t('helpers.label.incase.totalsum')%></th>
                <th><%= t('helpers.label.incase.status')%></th>
                <th><%= t('helpers.label.incase.tip')%></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @incases.each do |incase| %>
                  <%= render incase %>
              <% end %>
              </tbody>
          </table>
        </div>
      </div>
      <div class="row paginate-wrap">
        <%= render "shared/paginate", f: @incases %>
      </div>
    </div>
  </div>
</div>
