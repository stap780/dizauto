
<div class="row index-head mb-3">
  <div class="col-md-6 index-head__title">
    <h1 class="h3 d-inline align-middle"><%= Incase.model_name.human(count: 2)%></h1>
  </div>
  <div class="col-md-6 d-flex justify-content-end index-head__buttons">
  <% if Templ.incase_print.presence %>
    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-print"></i></button>
    <ul class="dropdown-menu">
    <%= form_with url: bulk_print_incases_path, method: :post, id: :bulk_action_form  do |f| %>
      <% Templ.incase_print.each do |templ|%>
        <%= f.button type: :submit, value: "templ_id##{templ.id}", class: "dropdown-item" do %>
          <%= templ.title %>
        <% end %>
      <% end %>
    <% end %>
    </ul>
  <% end %>


    <%= render 'shared/index_filter' if lookup_context.find_all("incases/_filter").any? %>
    <%= link_to "<i class='bi bi-arrow-clockwise'></i>".html_safe, incases_path, class: 'btn btn-outline-primary me-2' %>
    <%= link_to "<i class='bi bi-plus'></i> #{Incase.model_name.human}".html_safe, new_incase_path, class: "btn btn-primary" %>
  </div>
</div>

<%= render 'filter', q: @search, title: 'Incase filter' if lookup_context.find_all("incases/_filter").any?%>


<div class="card">
  <div class="card-header pb-0">
    <div class="card-actions float-end">
      <div class="dropdown position-relative">
        <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
          <i class="align-middle" data-feather="more-horizontal"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
          <%#OLD IMPORT link_to 'Импорт'.html_safe, file_import_incases_path, class: 'dropdown-item', data: {turbo_frame: "modal"} %>
          <%= link_to 'Импорт'.html_safe, incase_imports_path, class: 'dropdown-item'%>
          <%= link_to '.xlsx', incases_path(request.parameters.merge(format: 'zip')), class:"dropdown-item" %>
        </div>
      </div>
    </div>
    <h5 class="card-title mb-0">Заказы поставщикам</h5>
  </div>
  <div class="card-body">
    <div id="datatables-incases_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
      <div class="row">
        <div class="col-sm-12 table-responsive">
          <table id="datatables-incases" class="table table-striped" data-controller="selectall">
            <thead>
              <tr>
                <%= th_check_box_tag_all %>
                <%= tag.th('#')%>
                <%= tag.th(t('helpers.label.incase.incase_status_id'))%>
                <%= tag.th(t('helpers.label.incase.incase_tip_id'))%>
                <%= tag.th(t('helpers.label.incase.strah_id'))%>
                <%= tag.th(t('helpers.label.incase.stoanumber'))%>
                <%= tag.th(t('helpers.label.incase.unumber'))%>
                <%= tag.th(t('helpers.label.incase.carnumber'))%>
                <%= tag.th(t('helpers.label.incase.date'))%>
                <%= tag.th(t('helpers.label.incase.totalsum'))%>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%= render @incases %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row paginate-wrap">
        <%= render "shared/paginate", f: @incases %>
      </div>
    </div>
  </div>
</div>
