 <%= form_with(model: incase, data: { controller: 'nested-form slimselect', nested_form_wrapper_selector_value: '.nested-form-wrapper' }, class: 'incase-form' ) do |f| %>
    <%= render 'shared/errors', object: incase%>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <%= tabs_head('incase', [ ['main', t(:main)],['history', t(:history)] ]) if !f.object.new_record? %>
                </div>
                <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="main_tab" role="tabpanel" aria-labelledby="main_tab">
                        <div class="row">
                            <%= render 'form_data', f: f %>
                        </div>
                        <div class="row" data-controller="calculate">
                            <%# render 'table nested'   We change to Hotwire %>
                            <%= render 'nested', f: f %>
                        </div>
                    </div>
                    <% if !f.object.new_record? %>
                    <div class="tab-pane" id="history_tab" role="tabpanel" aria-labelledby="history_tab">
                        <%= render "shared/history", f: f %>
                    </div>
                    <% end %>
                </div>

                </div>
                <div class="card-footer">
                    <%= f.submit class: "btn btn-primary", data: {disable_with: false} %>
                    <%= link_to t('back'), incases_path, class: "btn btn-outline-primary" %>
                </div>
            </div>
        </div>
    </div>

<% end %>

