<%= form_with( url: polymorphic_path(model, action: 'bulk_status_update'), method: :post, data: {}) do |f| %>
    <% collection_ids.each do |id|%>
        <%= hidden_field_tag hidden_field, id %>
    <% end %>
    <div class="col-12 mb-3">
        <div class="h5 pb-3">Смена статуса</div>
        <%=tag.div class: "input-group" do %>
            <%= f.select update_field, status_model.order(:position).pluck(:title, :id), {include_blank: false}, {class: "form-select px-1"} %>
        <% end %>
    </div>
    <div class="col-12 py-3">
        <%= f.submit t('update'), class: "btn btn-primary" %>
    </div>
<% end %>