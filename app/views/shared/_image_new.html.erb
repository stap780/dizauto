  <div class="image-table row mt-3" data-controller="sortable toast" data-action="sortable:move->toast#show" id="product_images">
    <% @product.images.each do |image| %>
      <div class="col-4 p-2 borde border-info" data-sort-item-id="<%= image.id%>" data-sort-url="/products/<%=@product.id%>/sort_image">
        <div class="row align-items-center image-item d-flex flex-column">
          <div class="col">
            <i class="bi bi-arrows-move js-sort-handle fs-3"></i>
            <span class="badge bg-info float-end mt-1" data-sortable-target="position"><%= image.position%></span>
          </div>
          <div class="col" data-original-image-url="<%= url_for(image.file) if image.file.present? %>">
            <%= image_tag image.file.variant(:thumb) if image.file.present? %>
          </div>
          <div class="col text-center">
            <%= image.file.filename.to_s %>
          </div>
          <div class="col mt-2 text-center">
            <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, delete_image_products_path(@product.id, image.id), data: {  turbo_method: :delete,  turbo_confirm: "Are you sure?"}  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
