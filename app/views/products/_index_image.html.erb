<%= turbo_frame_tag dom_id(product, :index_image) do %>    
    <%= picture_tag(class: "") do %>
        <%= tag(:source, srcset: product.image_first.variant(:thumb_webp).processed.url) %>
        <%= image_tag(product.image_first.variant(:thumb), alt: "", class: "img-fluid img-thumbnail p-0") %>
    <% end %>
<% end %>
