<tr id="<%= dom_id product %>">
    <%= tag.td do %>
    <div class="form-check">
        <%= check_box_tag "product_ids[]", product.id, false, {class: 'checkboxes form-check-input', data: { 'selectall_target': 'checkbox', action: "change->selectall#toggleParent"}, form: :print_etiketki_form } %>
        <label class="form-check-label"><%= tag.b( product.id ) %></label>
    </div>
    <% end %>
    <%= tag.td do %>
        <%= image_tag product.image_first.representation(resize_to_limit: [60, 60]) %>
    <% end %>
    <%= tag.td( product.sku ) %>
    <%= tag.td( product.barcode ) %>
    <%= tag.td( product.title ) %>
    <%= tag.td( product.quantity ) %>
    <%= tag.td( product.price ) %>
    <%= tag.td( product.created_at.strftime("%d/%m/%Y") ) %>
    <%= tag.td do %>
        <%= render 'shared/print', object: product, templates: Templ.product_print if Templ.product_print.presence %>
    <% end %>
    <%= td_index_edit_delete_link(product)%>
</tr>