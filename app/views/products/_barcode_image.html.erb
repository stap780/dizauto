<% if f.object.barcode.present? %>
    <div class="card">
        <div class="card-body">
            <%= f.object.html_barcode %>
        </div>
    </div>
<% end %>

<div class="card">
    <div class="card-body">
        <%= render '/shared/image' %>
        <%= dropzone_controller_div_image do %>
            <%= f.file_field :images, 'data-dropzone-target': 'input', direct_upload: true, multiple: true  %>

            <div class="dropzone-msg dz-message needsclick">
                <h3 class="dropzone-msg-title">Перетащите сюда фото или нажмите для импорта</h3>
                <span class="dropzone-msg-desc text-sm"></span>
            </div>
        <% end %>
    </div>
</div>