<tr id="<%= dom_id trigger %>">
    <%= tag.td tag.b(trigger.id) %>
    <%= tag.td(trigger.active ? '<i data-feather="check"></i>'.html_safe : '<i data-feather="circle">'.html.safe) %>
    <%= tag.td(trigger.title)%>
    <%= tag.td(Trigger::Event.map{|trg| trg.first if trg[1] == trigger.event}.reject(&:blank?).join)%>
    <%= tag.td(trigger.condition)%>
    <%= tag.td do %>
        <% if trigger.actions.respond_to?('each') %>
            <% trigger.actions.each do |a| %>
                <%= a.title_values %><br>
            <% end %>
        <% end %>
    <% end %>
    <%= tag.td do %>
        <%= trigger.pause %>
        <%= trigger.pause_time %>
    <% end %>
    <%= td_index_edit_delete_link(trigger)%>
</tr>