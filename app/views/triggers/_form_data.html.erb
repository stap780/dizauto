<%= tag.div class: "row col-10" do %>
    <%= tag.div class: "col-1 align-self-center" do %>
        <%= tag.div class: "form-check form-switch" do %>
            <%= f.check_box :active, {class: "form-check-input", role: "switch"} %>
            <%= f.label :active, class: "form-check-label" %>
        <% end %>
    <% end %>
    <%= tag.div class: "col-11" %>
    <%= tag.div class: "mb-3 col-8" do %>
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
    <% end %>
    <%= tag.div class: "mb-3 col-4" do %>
        <%= f.label :event, class: "form-label" %>
        <%= f.select :event, Trigger::EVENT.map{ |r| [r[0], r[1], { value2: r[2]}] }, {}, {class: "form-select"} %>
    <% end %>
    <%= tag.div class: "mb-3 col-12" do %>
        <%= f.label :condition, class: "form-label" %>
        <%= f.text_area :condition, class: "form-control" %>
    <% end %>
    <%= tag.div class: "col-4 align-self-center" do %>
        <%= tag.div class: "form-check form-switch" do %>
            <%= f.check_box :pause, {class: "form-check-input", role: "switch"} %>
            <%= f.label :pause, class: "form-check-label" %>
        <% end %>
    <% end %>
    <%= tag.div class: "mb-3 col-4" do %>
        <%= f.label :pause_time, class: "form-label" %>
        <%= f.number_field :pause_time, class: "form-control" %>
    <% end %>
    <%= tag.div class: "mb-3 col-12" do %>
        <%= tag.label 'Действия', class: "my-3 fs-4 fw-bold" %>
        <%= tag.div "сохраните триггер чтобы появились условия", class: "notice" if f.object.new_record? %>
        <%= render partial: 'nested', locals: {f: f, trigger: trigger} unless f.object.new_record? %>
    <% end %>
<% end %>
