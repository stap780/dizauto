<%= turbo_frame_tag location do %>
  <%= form_with(model: location, class: "row") do |f|%>
    <%= render 'shared/errors', object: location %>
    <%= render "form_data", f: f%>
    
    <div class="col-4 d-flex justify-content-end gap-2 align-items-center">
      <%= f.button type: :submit, class: "btn btn-primary btn-sm" do %><%= check2_icon %><% end %>
      <%= link_to close_icon, :back, class: "btn btn-outline-primary btn-sm" %>
    </div>
  <% end %>
<% end %>