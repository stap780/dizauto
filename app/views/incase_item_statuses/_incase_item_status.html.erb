<%= turbo_frame_tag incase_item_status, class: "d-flex list-group-item py-2 border-start-0 border-end-0 row", data: {
    sort_url: sort_incase_item_status_path(incase_item_status.id), sort_item_id: incase_item_status.id }  do %>
  <%= tag.div(class: "col-1") do %>
    <%= sortable_with_badge(incase_item_status.position)%>
    <%= incase_item_status.id%>
  <% end %>
    <%= tag.div(incase_item_status.title, class: "col-5")%>
    <%= tag.div('', class: "col-4") do %>
        <%= tag.span('', class: 'spinner-grow-static', style: "background-color: #{incase_item_status.color};")%>
    <% end %>
    <div class= "col-2 d-flex justify-content-end gap-2 align-items-center">
        <%= render 'shared/edit_delete_link_turbo', object: incase_item_status %>
    </div>
<% end %>
