<%# f.hidden_field :product_id %>
<%= tag.div(class: 'row') do %>
  <%= tag.div class: "mb-3 col-md-6" do %>
    <%= f.label :sku, class: "form-label" %>
    <%= f.text_field :sku, class: 'form-control' %>
  <% end %>
  <%= tag.div class: "mb-3 col-md-6" do %>
    <%= f.label :barcode, class: "form-label" %>
    <% if f.object.new_record? %>
      <%= f.text_field :barcode, placeholder: 'появится после сохранения', class: 'form-control disabled', disabled: true  %>
    <% else %>
      <%= f.text_field :barcode, placeholder: 'появится после сохранения', class: 'form-control' %>
    <% end %>
  <% end %>
  <%= tag.div class: "mb-3 col-md-4" do %>
    <%= f.label :quantity, class: "form-label" %>
    <%= f.number_field :quantity, class: 'form-control disabled', disabled: true  %>
  <% end %>
  <%= tag.div class: "mb-3 col-md-4" do %>
    <%= f.label :cost_price, class: "form-label" %> 
    <%= f.text_field :cost_price, class: 'form-control' %>
  <% end %>
  <%= tag.div class: "mb-3 col-md-4" do %>
    <%= f.label :price, class: "form-label" %> 
    <%= f.text_field :price, class: 'form-control' %>
  <% end %>
<% end %>