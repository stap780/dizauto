<div class="row mb-3">
  <div class="col-md-6 index-head__title">
    <h1 class="h3 d-inline align-middle"><%= Insale.model_name.human(count: 2)%></h1>
  </div>
  <div class="col-md-6 d-flex justify-content-end index-head__buttons">
    <%= link_to add_icon, new_insale_path, class: "btn btn-primary float-end", data: {turbo_frame: 'offcanvas_wrap', turbo_prefetch: false, turbo_stream: true } %>
  </div>
</div>
<div class="card">
  <div class="card-header pb-0">
  </div>
  <div class="card-body">
    <%=turbo_stream_from "insales" %> 

    <%=turbo_frame_tag :insales, class:"table d-table" do %>
        <%=tag.div class:"d-table-row" do %> 
            <%=tag.div('#', class: 'd-table-cell fw-semibold')%>
            <%=tag.div( t( 'helpers.label.insale.api_key'), class: 'd-table-cell fw-semibold' )%>
            <%=tag.div( t( 'helpers.label.insale.api_password'), class: 'd-table-cell fw-semibold' )%>
            <%=tag.div( t( 'helpers.label.insale.api_link'), class: 'd-table-cell fw-semibold' )%>
            <%=tag.div('', class: 'd-table-cell fw-semibold')%>
        <%end %>
        <%=render @insales %>
    <%end %>
    
    <%=render "shared/paginate", f: @insales %>
  </div>
</div>