<%= turbo_frame_tag "prop_#{prop.id}_product_#{product.id}", class: "row" do %>
        <div class="mb-3 col-4">
            <%= prop.property.title.to_s%>
        </div>
        <div class="mb-3 col-4">
            <%= prop.property.c_val(prop.characteristic_id).title.to_s if prop.present? %>
        </div>
        <div class="mb-3 col-4 d-flex justify-content-end gap-2 align-items-center">
            <%= link_to edit_icon, [:edit, product, prop], class: '' %>
            <%= link_to trash_icon, [product,prop], data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class:"" %>
        </div>
<% end %>
