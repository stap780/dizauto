<%= turbo_frame_tag payment_type, class: 'd-table-row',  data: {sort_url: sort_payment_type_path(payment_type.id), sort_item_id: payment_type.id }  do %>
  <%= tag.div(class: "d-table-cell", style: 'width: 60px;') do %>
    <%= sortable_with_badge(payment_type.position)%>
    <%= tag.b payment_type.id%>
  <%end %>
  <%= tag.div(payment_type.title, class: "d-table-cell")%>
  <%= tag.div(payment_type.desc, class: "d-table-cell pe-1")%>
  <%= tag.div(payment_type.margin, class: "d-table-cell")%>
  <%= tag.div(class: "d-table-cell d-flex justify-content-end gap-2 align-items-center ps-2") do %>
    <%= link_to edit_icon, edit_payment_type_path(payment_type), data: { turbo_frame: 'offcanvas_wrap'}, class: '' %>
    <%= link_to trash_icon, payment_type, data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class: "" %>    
  <% end %>
<% end %>