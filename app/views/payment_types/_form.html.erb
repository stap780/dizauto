<%#turbo_frame_tag payment_type do %>
<%= form_with(model: payment_type) do |f| %>
  <%=tag.div(class: 'card') do %>
    <%=tag.div(class: 'card-header') do %>
      <%=tag.div(class: 'h3') do %><%= f.object.new_record? ? 'Создать' : 'Редактировать'%><%end%>
    <%end%>
    <%=tag.div(class: 'card-body py-0') do %>
      <%= render "shared/errors", object: payment_type %>

      <%=render 'form_data', f: f %>
      <%=tag.div(class: 'my-3 col-12 d-flex justify-content-end gap-2 align-items-center') do %>
        <%= f.submit t(:save), class: "btn btn-primary" %>
      <%end %> 

    <%end%>
  <%end%>
<% end %>
<%#end %>
