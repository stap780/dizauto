<%= turbo_frame_tag dom_id(commentable, dom_id(comment)), class: "col-12 row" do %>
  <%=tag.div( comment.created_at.strftime("%d/%m/%Y %H:%M") , class: "col-2")%>
  <%=tag.div( comment.user ? comment.user.email : '', class: "col-3")%>
  <%=tag.div( comment.body , class: "col")%>
  <%=tag.div( class: "col d-flex justify-content-end gap-2 align-items-center", admin: admin, user: user, id: "controls_#{dom_id(commentable, dom_id(comment))}" ) do %>
      <%= render partial: "comments/user_controls", locals: {commentable: commentable, comment: comment} if user && !admin%>
      <%= render partial: "comments/admin_controls", locals: {commentable: commentable, comment: comment} if admin %>
  <% end %>
<% end %>