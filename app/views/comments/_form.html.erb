<%= turbo_frame_tag dom_id(commentable, dom_id(comment))  do %>
  <%= form_with(model: [commentable, comment], class: "col-10 row align-items-center d-flex justify-content-center mb-3", data: {}) do |f| %>
    <%= render 'shared/errors', object: comment %>
    <div class="col">
      <%= render 'comments/form_data', f: f %>
    </div>
    <%=tag.div( class: "col-3 d-flex justify-content-end gap-2 align-items-center") do %>
        <%= f.submit t(:save), class: "btn btn-primary" %>
        <%= link_to close_icon, :back, class: "btn btn-outline-primary" %>
    <% end %>
  <% end %>
<% end %>