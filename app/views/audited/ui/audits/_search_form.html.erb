<%= search_form_for @q, url: request.path do |f| %>
<div class="row d-flex justify-content-center align-items-center mb-3">
  <div class="col-3">
    <%= f.label t("activerecord.attributes.audit.user"), class: "form-label" %>
    <%= f.collection_select :user_id_eq, User.all, :id, :email, {include_blank: true}, {class: "form-select" }%>
  </div>

  <div class="col-3">
    <%= f.label t("activerecord.attributes.audit.created_at"), class: "form-label" %>
    <div class="input-group">
      <%= f.date_field :created_at_gteq, type: :date , class: "form-control"  %>
      <%= f.date_field :created_at_lteq, type: :date , class: "form-control"  %>
     </div>
  </div>

  <div class="col-3">
    <%= f.label t("activerecord.attributes.audit.audited_changes"), class: "form-label" %>
    <%= f.text_field :raw_audited_changes_cont, class: "form-control" %>
  </div>

  <div class="col d-flex align-self-end">
    <%= f.submit class: "btn btn-outline-primary" %>
  </div>
</div>
<% end %>
