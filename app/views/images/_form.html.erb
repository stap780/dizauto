<%= form_with(model: image) do |f| %>
   <%= render "shared/errors", object: image%>

  <div class="row">
      <div class="col-md-12">
          <div class="card">
              <div class="card-header"></div>
              <div class="card-body">
                  <div class="row">
                      <div class="mb-3 col-md-12">
                          <%= f.label :file, class: "form-label" %>
                          <%= f.file_field :file, class: "form-control" %>
                      </div>
                      <div class="mb-3 col-md-12">
                          <%= f.label :position, class: "form-label" %>
                          <%= f.text_field :position , class: "form-control"%>
                      </div>
                        <div class="mb-3 col-md-12">
                          <%= f.label :product_id, class: "form-label" %>
                          <%= f.text_field :product_id , class: "form-control"%>
                      </div>
                  </div>
              </div>
              <div class="card-footer">
                  <%= f.submit class: "btn btn-primary" %>
                  <%= link_to t('back'), images_path, class: "btn btn-outline-primary" %>
              </div>
          </div>
      </div>
  </div>

<% end %>
