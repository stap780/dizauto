<%= link_to "<i data-feather='plus'></i> #{Permission.model_name.human}".html_safe, new_permission_path, class: "btn btn-primary float-end mt-n1" %>
<div class="mb-3">
  <h1 class="h3 d-inline align-middle"><%= Permission.model_name.human(count: 2)%></h1>
</div>

<div class="card">
  <div class="card-header pb-0">
    <div class="card-actions float-end">
      <div class="dropdown position-relative">
        <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
          <%= more_icon%>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
          <a href="#" class="dropdown-item">test</a>
        </div>
      </div>
    </div>
    <h5 class="card-title mb-0"></h5>
  </div>
  <div class="card-body">
    <div id="datatables-products_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
      <div class="row">
        <div class="col-sm-12">
          <table id="datatables-exports" class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th><%= t('model')%></th>
                <th><%= t('action')%></th>
                <th><%= t('user')%></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @permissions.each do |permission| %>
                <%= render permission %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      
      <%= render "shared/paginate", f: @permissions %>
    </div>
  </div>
</div>
