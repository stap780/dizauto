<div class="card">
  <div class="card-header"></div>
  <div class="card-body">
    <%= form_with(model: [@user, permission]) do |f| %>
      <%= render "shared/errors", object: permission %>

      <%= render 'form_data', f:f %>

      <div class="my-3 col-12 d-flex justify-content-end gap-2 align-items-center">
        <%= f.submit t('save'), class: "btn btn-primary" %>
        <%# link_to close_icon, :back, class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>