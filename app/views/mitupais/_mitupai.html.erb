<%= turbo_frame_tag mitupai, class: "d-table-row" do %>
  <%= tag.div(mitupai.id, class: "d-table-cell") %>
  <%= tag.div(mitupai.api_url, class: "d-table-cell") %>
  <%= tag.div(mitupai.api_key, class: "d-table-cell") %>
  <%= tag.div class: "d-table-cell" do %>
    <%= tag.div class: h_v_center do %>
      <%= link_to edit_icon, edit_mitupai_path(mitupai), class: "btn", data: { turbo_frame: 'offcanvas_wrap', turbo_prefetch: false } %>
      <%= link_to trash_icon, mitupai, data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class: "btn" %>
    <% end %>
  <% end %>
<% end %>
