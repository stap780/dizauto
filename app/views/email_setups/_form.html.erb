<%= form_with(model: @email_setup) do |f| %>
   <%= render "shared/errors", object: @email_setup%>

  <div class="row">
      <div class="col-md-12">
          <div class="card">
              <div class="card-header"></div>
              <div class="card-body">
                  <div class="row col-6">
                      <div class="mb-3 col-md-12">
                          <%= f.label :address, class: "form-label" %>
                          <%= f.text_field :address, class: "form-control" %>
                      </div>
                      <div class="mb-3 col-md-12">
                          <%= f.label :domain, class: "form-label" %>
                          <%= f.text_field :domain, class: "form-control" %>
                      </div>
                      <div class="mb-3 col-md-12">
                          <%= f.label :authentication, class: "form-label" %>
                          <%= f.select :authentication, ['login','plain'], {include_blank: false}, {class: "form-select"}%>
                      </div>
                      <div class="mb-3 col-md-12">
                          <%= f.label :user_name, class: "form-label" %>
                          <%= f.text_field :user_name, class: "form-control" %>
                      </div>
                      <div class="mb-3 col-md-12">
                          <%= f.label :user_password, class: "form-label" %>
                          <%= f.text_field :user_password, class: "form-control" %>
                      </div>
                      <div class="mb-3 col-md-6">
                          <%= f.label :port, class: "form-label" %>
                          <%= f.number_field :port, class: "form-control" %>
                      </div>
                      <div class="col-md-4 align-self-center">
                        <div class="form-check form-switch">
                          <%= f.check_box :tls, {class: "form-check-input", role: "switch"} %>
                          <%= f.label 'tls', class: "form-check-label"%>
                        </div>
                      </div>
                  </div>
              </div>
              <div class="card-footer">
                  <%= f.submit class: "btn btn-primary" %>
                  <%= link_to t('back'), email_setups_path, class: "btn btn-outline-primary" %>
              </div>
          </div>
      </div>
  </div>

<% end %>
