<%= link_to "<i data-feather='plus'></i> #{RentCaseStatus.model_name.human}".html_safe, 
    new_rent_case_status_path, class: "btn btn-primary float-end mt-n1", data: {turbo_frame: dom_id(RentCaseStatus.new) } %>
<div class="mb-3">
  <h1 class="h3 d-inline align-middle"><%= RentCaseStatus.model_name.human(count: 2)%></h1>
</div>

<div class="card">
  <div class="card-header pb-0">
    <div class="card-actions float-end">
      <div class="dropdown position-relative">
        <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
          <i class="align-middle" data-feather="more-horizontal"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
          <a href="#" class="dropdown-item">test</a>
        </div>
      </div>
    </div>
    <h5 class="card-title mb-0"></h5>
  </div>
  <div class="card-body">
    <div id="datatables-rent_case_status_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
        <%= turbo_frame_tag RentCaseStatus.new %>

        <div class="col-sm-12 list-group list-group-striped">
          <div class="row py-2 px-4">
            <%= tag.div('', class: 'col-md-1 fw-semibold')%> 
            <%= tag.div('#', class: 'col-md-1 fw-semibold')%>
            <%= tag.div( t( 'helpers.label.ent_case_status.title'), class: 'col-md-4 fw-semibold' )%>
            <%= tag.div( t( 'helpers.label.ent_case_status.color'), class: 'col-md-4 fw-semibold' )%>
            <%= tag.div('', class: 'col-md-1 fw-semibold')%>
          </div>
          <%= turbo_frame_tag 'rent_case_statuses', data: { controller: "sortable toast", action: "sortable:move->toast#show"} do %>
              <%= render @rent_case_statuses %>
          <% end %>
        </div>

      <div class="row paginate-wrap mt-4">
        <%= render "shared/paginate", f: @rent_case_statuses %>
      </div>
    </div>
  </div>
</div>
