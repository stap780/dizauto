<%= turbo_frame_tag rent_case_status, class: "d-flex list-group-item py-2 border-start-0 border-end-0 row", data: {
    sort_url: sort_rent_case_status_path(rent_case_status.id), sort_item_id: rent_case_status.id }  do %>
    <%= tag.div(class: "col-1") do %>
        <%= sortable_with_badge(rent_case_status.position)%>
        <%= rent_case_status.id%>
    <% end %>
    <%= tag.div(rent_case_status.title, class: "col-5")%>
    <%= tag.div('', class: "col-4") do %>
        <%= tag.span('', class: 'spinner-grow-static', style: "background-color: #{rent_case_status.color};")%>
    <% end %>
    <div class= "col-1 justify-content-end gap-2 align-items-cente">
        <%= render 'shared/edit_delete_link_turbo', object: rent_case_status %>
    </div>
<% end %>