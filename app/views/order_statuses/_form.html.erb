<%= form_with(model: order_status) do |f| %>
    <%= render "shared/errors", object: order_status %>

  <div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
              <div class="row">
                  <div class="mb-3 col-md-6">
                    <%= f.label :title, class: "form-label" %>
                    <%= f.text_field :title, class: "form-control" %>
                  </div>
                    <div class="mb-3 col-md-6" data-controller="color-picker">
                      <%= f.label :color, class: "form-label" %>
                      <%= f.hidden_field :color, class: "form-control", data: {"color-picker-target": "input"} %>
                      <%= inline_error_for(:color, order_status)%>
                      <span data-color-picker-target="button"></span>
                    </div>
              </div>            
            </div>
            <div class="card-footer">
                <%= f.submit class: "btn btn-primary" %>
                <%= link_to t('back'), :back, class: "btn btn-outline-primary" %>
            </div>
        </div>
    </div>
</div>

<% end %>
