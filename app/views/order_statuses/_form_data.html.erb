<%=tag.div(class: 'mb-3 col') do %>
    <%=f.label :title, class: "form-label" %> 
    <%=f.text_field :title, class: "form-control" %>
<%end %> 
<%=tag.div(class: 'mb-3 col', "data-controller":"color-picker") do %>
    <%= f.label :color, class: "col-form-label"%>
    <%= f.hidden_field :color, class: "form-control", data: {"color-picker-target": "input"} %>
    <%=tag.span('data-color-picker-target': 'button')%>
<%end %>