<%= turbo_frame_tag "trigger_action_#{trigger_action.id}_trigger_#{trigger.id}", class: "row justify-content-between align-items-center mb-3" do %>
  <div class="col-4">
      <%= trigger_action.name_title%>
  </div>
  <div class="col-4">
      <%= trigger_action.value_title %>
  </div>
  <div class="col-4 d-flex justify-content-end gap-2 align-items-center">
      <%= link_to edit_icon, [:edit, trigger, trigger_action], class: '' %>
      <%= link_to trash_icon, [trigger,trigger_action], data: { "turbo-method": :delete, 'turbo-confirm': 'Are you sure?' }, class:"" %>
  </div>
<% end %>
