<%= turbo_frame_tag dom_id(@trigger, dom_id(trigger_action))  do %>
    <%= form_with(model: [@trigger, trigger_action], class: "row justify-content-between align-items-center mb-3", data: {}) do |f|%>
        <%= render 'shared/errors', object: trigger_action %>
        <div class="mb-3 col-4">

        <%= f.select :name,  options_for_select(trigger_action.names_collection, @selected), 
                                    {include_blank: false, prompt: t('name')}, 
                                    {data: {controller: 'slimselect',
                                            nested_url:  values_trigger_trigger_actions_path}}  %>
        </div>
        
        <div class="mb-3 col-4">
        <%= f.select :value, trigger_action.values(@selected), 
                        {include_blank: false, prompt: t('value')}, 
                                        {data: {controller: 'slimselect'}}  %>
        </div>

        <div class="mb-3 col-4 d-flex justify-content-end gap-2 align-items-center">
            <%= f.submit t(:save), class: "btn btn-primary" %>
            <%= link_to close_icon, :back, class: "btn btn-outline-primary" %>
        </div>

    <% end %>
<% end %>