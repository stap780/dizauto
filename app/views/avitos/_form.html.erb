<%= form_with(model: avito) do |f| %>
  <%= tag.div(class: 'card') do %>
    <%= tag.div(class: 'card-header') do %>
      <%= tag.div(class: 'h3') do %>
        <%= f.object.new_record? ? 'Создать' : 'Редактировать' %>
      <% end %>
    <% end %>
    <%= tag.div(class: 'card-body py-0') do %>
      <%= render "shared/errors", object: avito %>

      <%= tag.div(class: 'mb-3 col') do %>
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      <% end %>
      <%= tag.div(class: 'mb-3 col') do %>
        <%= f.label :api_id, class: "form-label" %>
        <%= f.text_field :api_id, class: "form-control" %>
      <% end %>
      <%= tag.div(class: 'mb-3 col') do %>
        <%= f.label :api_secret, class: "form-label" %>
        <%= f.text_field :api_secret, class: "form-control" %>
      <% end %>
      <%= tag.div(class: "my-3 col-12 #{h_v_center}") do %>
        <%= f.submit t(:save), class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>