	<main class="d-flex w-100 h-100">
		<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Регистрация</h1>
							<p class="lead"></p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                   <%= render "devise/shared/error_messages", resource: resource %>
										<div class="mb-3">
											<%# <input class="form-control" type="text" autocomplete="on" placeholder="Name"> %>
                      <%# f.text_field :name, placeholder: "Name", class: "form-control" %>
										</div>
										<div class="mb-3">
											<%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
										</div>
										<div class="mb-3">
											<% password_hint = @minimum_password_length ? "#{@minimum_password_length} characters minimum" : ""%>
                      <%= f.password_field :password, class: "form-control", placeholder: "Password", "data-bs-toggle": "popover", "data-bs-content": password_hint %>
										</div>
                    <div class="mb-3">
                      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
                    </div>
										<div class="text-center mt-3">
                      <%= f.submit "Зарегистрироваться", class: "btn btn-lg btn-primary" %>
										</div>
                    <div class="text-center mt-3"><span class="mb-0 undefined">Есть регистрация?</span> <span><%= link_to "войти", new_user_session_path%></span></div>
									<% end %>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>
