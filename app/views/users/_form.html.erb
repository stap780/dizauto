<%= form_with(model: user, data: {controller: 'user', 'user-dnone-class': 'd-none'}) do |f| %>
    <%= render "shared/errors", object: @user %>

    <%= tag.div class: "row" do %>
        <%= tag.div class: "col-md-12" do %>
            <%= tag.div class: "card" do %>
                <%= tag.div class: "card-header" %>
                <%= tag.div class: "card-body row" do %>
                    <%= render 'form_data', f: f %>
                    <%= render 'nested_permission', f: f if !f.object.new_record? %>
                <% end %>
                
                <%= tag.div class: "card-footer" do %>
                    <%= f.submit class: "btn btn-primary" %>
                    <%= link_to t(:back), users_path, class: "btn btn-outline-primary" %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
