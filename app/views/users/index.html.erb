<%= link_to "<i data-feather='plus'></i> #{User.model_name.human}".html_safe, users_admin_new_path, class: "btn btn-primary float-end mt-n1" %>
<div class="mb-3">
  <h1 class="h3 d-inline align-middle"><%= User.model_name.human(count: 2)%></h1>
</div>

<div class="card">
  <div class="card-header pb-0">
    <div class="card-actions float-end">
      <div class="dropdown position-relative">
        <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
          <%= more_icon%>
        </a>
        <div class="dropdown-menu dropdown-menu-end">
          <a href="#" class="dropdown-item">test</a>
        </div>
      </div>
    </div>
    <h5 class="card-title mb-0">Всего: <%= User.all.count %></br><%= "Выбрано: "+@users.total_entries.to_s if @users.size > 0 &&  @users.size != User.all.count %></h5>
  </div>
  <div class="card-body">
    <div id="datatables-products_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
    <div class="row">
      <div class="col-sm-12">
        <table id="datatables-products" class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th><%= t('helpers.label.user.name')%></th>
              <th><%= t('helpers.label.user.email')%></th>
              <th><%= t('helpers.label.user.role')%></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><b><%= user.id%></b></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td class="text-nowrap">
                  <%= render 'shared/edit_delete_link', object: user %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row paginate-wrap">
      <%= render "shared/paginate", f: @users %>
    </div>
    </div>
  </div>
</div>
